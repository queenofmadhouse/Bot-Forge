# Environment Variables for Microgram

# Main Application
PORT=8080

# API Gateway
GATEWAY_PORT=3333

# User Service
USER_SERVICE_PORT=3001
USER_SERVICE_URL=http://localhost:3001
JWT_SECRET=your-secret-key

# Bot Builder Service
BOT_BUILDER_PORT=3002
BOT_BUILDER_SERVICE_URL=http://localhost:3002

# Bot Runtime Service
BOT_RUNTIME_PORT=3003
BOT_RUNTIME_SERVICE_URL=http://localhost:3003

# Database Service
DB_SERVICE_PORT=3004
DB_SERVICE_URL=http://localhost:3004
MONGO_URI=mongodb://localhost:27017/microgram

# Node Environment
NODE_ENV=development
